<%- include('../partials/header') %>
<div>
  <div class="header"><h1>Register new account</h1></div>
  <div class="input_fields">
    <input id="name" type="text" placeholder="Enter your name" /><br />
    <span id="name-error" class="error-message"></span><br />

    <input id="email" type="text" placeholder="Enter your email" /><br />
    <span id="email-error" class="error-message"></span><br />

    <input
      id="password"
      type="password"
      placeholder="Enter your password"
    /><br />
    <span id="password-error" class="error-message"></span><br />

    <input
      id="confirm-password"
      type="password"
      placeholder="Confirm your password"
    /><br />
    <span id="confirm-password-error" class="error-message"></span><br />

    <input id="profile-image" type="file" accept="image/*" /><br />
    <span id="image-error" class="error-message"></span><br />

    <button id="register-button" class="login_button">Register</button>
  </div>
  <div class="new_user">
    <p>Existing user?<a href="/login"> Login</a></p>
  </div>
</div>
<%- include('../partials/footer') %>

